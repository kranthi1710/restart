/**
 * @param {string} s
 * @return {number}
 */
var lengthOfLastWord = function(s) {
    // start from right side, If you encounter the space- trim it,
    // start counting the characters
    // If you encouter the space this time after count is greater than 0, break the loop and return the count
    let right=s.length-1;
    let count=0;
    for(let i=right;i>=0;i--){
         if(s[i]!==" "){
            count++;
        } else if(s[i]===" " && count>0) {
                 return count;
                 break;
        }
    }
    return count;
};
