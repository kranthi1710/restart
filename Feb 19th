// longest common prefix

/**
 * @param {string[]} strs
 * @return {string}
 */
var longestCommonPrefix = function(strs) {
    let prefix=strs[0];
    let left=0;
    // we will increment the left till the first string length
    while(left<prefix.length){
        //compare this prefix characters with other strings present
        for(let i=1;i<strs.length;i++){
            // check if character in current string is not equal to prefix character
            // OR if left pointer reaches the end of strig length
            if(strs[i][left]!==prefix[left] || left===strs[i].length){
              return prefix.substring(0,left);
            }
        }
        // Keep the pointer incrementing for every character check if no above failure condition
        left++;
    }
    return prefix;
};
