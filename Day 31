
watched recursion 
sum of array elements using recursion

function sum(n){
if(n===0) return arr[0];
return arr[n]+sum[n-1]
}

let arr=[1,2,3,4,5]

sum(arr.length-1)

// sum of n integers using recursion

function sum(n){
if(n===0) return 0;
return n + sum(n-1)
}
sum(6) // 21


powerOfTwo

function powerOfTwo(n){
if(n===1) return true
else if((n%2!==0) && n<1) return false

return powerOfTwo(n/2);

}

powerOfTwo(15);
