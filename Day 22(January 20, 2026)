// best time to buy and sell stock

my approach ( some tests are failing)

var maxProfit = function(prices) {
    let buy= prices[0];
    let buy_ind=0;

    for(let i=1;i<prices.length;i++){
        if(prices[i]<buy){
            buy=prices[i];
            buy_ind=i;
        }
    }
    let sell= prices[buy_ind+1];
    for(let i=buy_ind;i<prices.length;i++){
        if(prices[i]>sell){
            sell=prices[i];
        }
    }
    return sell!== undefined?sell-buy:0;
};


Akshay saini approach:

var maxProfit = function(prices) {
    let p=prices.length;
    let min=prices[0];
    let max_profit=0;
    
    for(let i=0;i<p;i++){
    // find minimum by checking if any element is less than min 
//and update that to min
        if(prices[i]<min){
            min=prices[i];
        }
        // get max profit by diff of buy(min) and sell(current price )
        if(prices[i]-min>max_profit){
            max_profit=prices[i]-min;
        }
    }
    return max_profit;
    };

