// find the index of first occurence in the string
var strStr = function (haystack, needle) {
    if (needle === "") return 0;

    for (let i = 0; i <= haystack.length - needle.length; i++) {
        if (haystack.slice(i, i + needle.length) === needle) {
            return i;
        }
    }
    return -1;
};

// My approach using two pointers---failing with overlap issue, where KMP alogorithm will solve the issue
var strStr = function (haystack, needle) {
    if (needle === "") return 0;

    let left=0;
   let right=0;
   while(left<needle.length && right<haystack.length){
    if(needle[left]===haystack[right]){
        left++;
right++;
    }
left=0;
    right++;
   }
   return left===needle.length?right-needle.length:-1;
};

// Akshay saini approach

var strStr = function(haystack, needle) {
    let h= haystack.length;
    let n= needle.length;
    for(let i=0;i<=h-n;i++){
        let j=0;
        for(j=0;j<n;j++){
            if(haystack[i+j]!==needle[j]){ // here i+j is taken to move in forward direction from current i instead of 0
                break;
            }
        }
        if(j===n) return i;
    }
    return -1;
}

